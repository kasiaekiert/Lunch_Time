<div class="page-header">
  <%= link_to new_menu_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Menu
  <% end %>
  <h1>Listing menus</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Place</th>
            <th>Menu date</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each do |menu| %>
        <%= content_tag :tr, id: dom_id(menu), class: dom_class(menu) do %>
                      <td><%= menu.place_id %></td>
                      <td><%= menu.menu_date %></td>
                    <td><%= link_to 'Show', menu %></td>
          <td><%= link_to 'Edit', edit_menu_path(menu) %></td>
          <td><%= link_to 'Destroy', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
