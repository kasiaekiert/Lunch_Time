<%= form_for(@place, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @place.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@place.errors.count, "error") %> prohibited this place from being saved:</h4>

      <ul>
      <% @place.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    
  </div>
  
  <div class="form-group">
    
      <%= f.label :delivery_time, class: "col-sm-2 control-label" %>
      <div class="col-sm-10 delivery-line">
        <%= f.datetime_select :delivery_time, {}, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :order_time, class: "col-sm-2 control-label" %>
      <div class="col-sm-10 delivery-line">
        <%= f.datetime_select :order_time, {}, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
